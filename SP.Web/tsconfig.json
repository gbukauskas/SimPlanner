{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "typeAcquisition": {
    "enable": true
  }
}
